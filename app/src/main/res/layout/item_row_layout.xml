<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="3dp"
    android:id="@+id/exam_row_layout"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_marginTop="5dp"
    android:tooltipText="@string/swipe_delete_tip">
<androidx.constraintlayout.widget.ConstraintLayout

    android:id="@+id/row_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/item_pic"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/select_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_pic"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        android:tint="@color/colorTextPrimary"
        android:tooltipText="@string/open_file_tip"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:textAppearance="@color/colorTextPrimary"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/select_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/select_arrow"
        android:breakStrategy="simple"
        android:layout_margin="7dp"
        android:tooltipText="@string/item_name_tip"/>

    <CheckedTextView
        android:id="@+id/check"
        android:drawableRight="@drawable/item_selected"
        android:checked="true"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tooltipText="@string/memorized_tip"
        app:layout_constraintTop_toTopOf="@id/select_arrow"
        app:layout_constraintBottom_toBottomOf="@id/select_arrow"
        app:layout_constraintEnd_toStartOf="@id/select_arrow"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>